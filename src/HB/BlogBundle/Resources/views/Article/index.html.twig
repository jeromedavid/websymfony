{% extends '::base.html.twig' %}


{% block title %}{{parent()}} Liste des articles{% endblock %}


{% block body -%}
    
    <h2>Liste des articles</h2>

    <table class="flat-table flat-table-1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Creationdate</th>
                <th>Lasteditdate</th>
                <th>Publishdate</th>
                <th>Published</th>
                <th>Enabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a class="nombre" href="{{ path('article_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>{% if entity.creationDate %}{{ entity.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.lastEditDate %}{{ entity.lastEditDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.publishDate %}{{ entity.publishDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.published }}</td>
                <td>{{ entity.enabled }}</td>
                <td>
                        <a class="button green glossy" href="{{ path('article_show', { 'id': entity.id }) }}">Afficher</a> <a class="button orange glossy" href="{{ path('article_edit', { 'id': entity.id }) }}">Ã‰diter</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a class="button blue glossy" href="{{ path('article_new') }}">
                Create a new entry
            </a>

    {% endblock %}
